COUNTS: output sum of int;

findMethods := visitor {
    before n: Method -> COUNTS << 1;
};

visit(input, visitor {
    # invariants etc
    before n: Declaration ->  if (def(getspec(n))) visit(getspec(n), findMethods);
    # assume etc
    # pre/post on methods
    before n: Method -> if (def(getspec(n))) visit(getspec(n), findMethods);
});
