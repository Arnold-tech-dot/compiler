o: output sum of int;
o << 1;


# normal declaration
type t1 = { i: int, string, b: bool };
tup1: t1 = { 5, "string", false };

# structurally similar tuple, different names
type t2 = { i2: int, s: string, b2: bool };
tup2: t2 = { 5, "string", false };

# no explicit type
tup3 := { 5, "string", false };
tup4 := { 5, false };


# access by name
tup1.i = 9;
tup1.b = true;

tup2.i2 = 3;
tup2.s = "bar";
tup2.b2 = false;

# access by position
tup1._1 = 3;
tup1._2 = "foo";
tup1._3 = false;

tup2._1 = 3;
tup2._2 = "foo";
tup2._3 = false;

tup3._1 = 3;
tup3._2 = "foo";
tup3._3 = false;

tup4._1 = 3;
tup4._2 = true;


# assignment
tup1 = tup2;
tup1 = tup3;
tup1 = { 5, "string", false };

tup2 = tup1;
tup2 = tup3;
tup2 = { 5, "string", false };

tup3 = tup1;
tup3 = tup2;
tup3 = { 5, "string", false };
