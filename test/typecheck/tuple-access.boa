type t1 = { i: int, string, b: bool };
tup1: t1 = { 5, "string", false };

# access by name
tup1.i = 9;
tup1.b = true;

# access by position
tup1._0 = 3;
tup1._1 = "foo";
tup1._2 = false;

# tuples without declaring explicit type
tup2 := { 5, false };

tup2._0 = 3;
tup2._1 = true;

# structurally similar tuple, different names
type t2 = { i2: int, s: string, b2: bool };
tup3: t2 = { 5, "string", false };

tup3.i2 = 3;
tup3.s = "bar";
tup3.b2 = false;
